{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "us-central1-docker.pkg.dev/de2024-435420/labrepo/orderservice-api:0.0.1", 
        "./order-service"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/orderservice-api:0.0.1",
        "./order-service"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/orderservice-api:0.0.1"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "order-service",
        "--image",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/orderservice-api:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--port",
        "5004",
        "--cpu",
        "2",
        "--memory",
        "4G",
        "--allow-unauthenticated",
        "--update-env-vars",
        "DB_URL=bigquery://$PROJECT_ID/group2_orderdb"
      ]
    }
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}