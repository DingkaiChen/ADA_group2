{
  "steps": [
    {
      "name": "python:3.10.8-slim-buster",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "apt-get update && apt-get install -y gcc python3-dev && "  
        "cd ./order-service && ",
        "python -m pip install --upgrade pip && ", 
        "python -m venv .myenv && ",
        ". .myenv/bin/activate && ",
        "pip install -r requirements.txt"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/${_PROJECT_ID}/labrepo/orderservice-api:0.0.1",
        "./order-service"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/${_PROJECT_ID}/labrepo/orderservice-api:0.0.1"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "order-service",
        "--image",
        "${_LOCATION}-docker.pkg.dev/${_PROJECT_ID}/labrepo/orderservice-api:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--port",
        "5004",
        "--cpu",
        "2",
        "--memory",
        "4G",
        "--allow-unauthenticated",
        "--update-env-vars",
        "DB_URL=bigquery://${_PROJECT_ID}/group2_orderdb"
      ]
    }
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}