{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": ["build", "-t", "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/inventoryservice-api:0.0.1", "./inventory-service"]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": ["push", "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/inventoryservice-api:0.0.1"]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run", "deploy", "inventory-service",
        "--image", "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/inventoryservice-api:0.0.1",
        "--region", "us-central1",
        "--platform", "managed",
        "--allow-unauthenticated",
        "--port", "8080",
        "--update-env-vars", "DB_URL=bigquery://$PROJECT_ID/group2_inventorydb"
      ]
    }
  ]
}